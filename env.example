# Bot Configuration
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/kaizen_bot

# Server Configuration
PORT=3000
NODE_ENV=development

# AI Service Configuration
# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_API_URL=https://api.openai.com/v1/chat/completions
AI_MODEL=gpt-3.5-turbo

# Alternative: Claude Configuration
# CLAUDE_API_KEY=your_claude_api_key_here
# CLAUDE_API_URL=https://api.anthropic.com/v1/messages

# n8n Integration (Optional - for advanced workflows)
N8N_WEBHOOK_URL=http://localhost:5678/webhook-test/kaizen-bot
# N8N_API_KEY is optional - only needed if n8n requires authentication
# Leave empty or set to 'your_n8n_api_key_here' to disable authentication
N8N_API_KEY=your_n8n_api_key_here

# Security
# JWT_SECRET is currently not used in the code but kept for future API authentication
# Generate a random string: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=your_jwt_secret_here

