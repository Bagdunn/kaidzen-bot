# Auto detect text files and perform LF normalization
* text=auto

# Shell scripts
*.sh text eol=lf

# Batch files
*.bat text eol=crlf

# JavaScript files
*.js text eol=lf
*.json text eol=lf

# Markdown files
*.md text eol=lf

# Configuration files
*.yml text eol=lf
*.yaml text eol=lf
*.toml text eol=lf
*.ini text eol=lf
*.cfg text eol=lf
*.conf text eol=lf

# Documentation
*.txt text eol=lf
*.rst text eol=lf

# Logs
*.log text eol=lf

# SQL files
*.sql text eol=lf
